            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Pay" asp-action="Index">
                    Pay Invoices
                    <i class="fab fa-paypal"></i>
                </a>
            </li>
